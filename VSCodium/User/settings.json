{
    "workbench.colorTheme": "Monokai",
    "editor.fontFamily": "'RecMonoCasual Nerd Font','Droid Sans Mono', 'monospace', monospace",
    "editor.fontSize": 16,
    
    // ----- Vim Keybinings -----
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    // Default for use control keys is true
    // Keep it true otherwise it's causing problems with vim keybindings
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },

    "vim.insertModeKeyBindings": [
        {
            // Use kj for Esc
            "before": ["k", "j"],
            "after": ["<Esc>"]
        }
    ],

    "vim.normalModeKeyBindingsNonRecursive": [
        // Row to to start and End
        {
            "before": ["H"],
            "after": ["^"]
        },
        {
            "before": ["L"],
            "after": ["$"]
        },

        // Split Navigation
        {
            "before": ["<C-j>"],
            "after": ["<C-w>","j"]
        },
        {
            "before": ["<C-k>"],
            "after": ["<C-w>","k"]
        },
        {
            "before": ["<C-l>"],
            "after": ["<C-w>","l"]
        },
        {
            "before": ["<C-h>"],
            "after": ["<C-w>","h"]
        },

        // Tabs
        {
            "before": ["t"],
            "commands": [":tabn"]
        },
        {
            "before": ["T"],
            "commands": [":tabp"]
        },

        // File Explorer
        {
            "before": ["<leader>","e"],
            "commands": ["revealInExplorer"]
        },


    ],

    "vim.visualModeKeyBindings": [
        {
            "before": [">"],
            "after": [">","g","v"]
        },
        {
            "before": ["<"],
            "after": ["<","g","v"]
        }
    ],
    "window.zoomLevel": 1
}

