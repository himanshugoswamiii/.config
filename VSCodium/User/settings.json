{
    "workbench.colorTheme": "Monokai",
    "editor.fontFamily": "'RecMonoCasual Nerd Font','Droid Sans Mono', 'monospace', monospace",
    "editor.fontSize": 18,
    
    // ----- Vim Keybinings -----
    "vim.insertModeKeyBindings": [
        {
            // Use kj for Esc
            "before": ["k", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        // Row to to start and End
        {
        "before": ["H"],
        "after": ["^"]
        },
        {
        "before": ["L"],
        "after": ["$"]
        },

        // Split Navigation
        {
        "before": ["<C-j>"],
        "after": ["<C-w>","j"]
        },
        {
        "before": ["<C-k>"],
        "after": ["<C-w>","k"]
        },
        {
        "before": ["<C-l>"],
        "after": ["<C-w>","l"]
        },
        {
        "before": ["<C-h>"],
        "after": ["<C-w>","h"]
        }

    ]
}

